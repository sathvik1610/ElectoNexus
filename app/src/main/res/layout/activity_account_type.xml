<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_type">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#8F9B97"
        android:backgroundTint="#8F9B97"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="286dp"
            android:layout_height="57dp"
            android:fontFamily="@font/konkhmer_sleokchher"
            android:text="SIGN UP AS : "
            android:textColor="#181818"
            android:textFontWeight="500"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.292" />

        <RadioGroup
            android:id="@+id/LradioGroup"
            android:layout_width="328dp"
            android:layout_height="385dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.734">


            <RadioButton
                android:id="@+id/LradioButtonAdmin"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text=" ADMIN"
                android:textFontWeight="700"
                android:textSize="23dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="296dp"
                android:layout_height="108dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/gowun_dodum"
                android:text="As an admin, you can conduct elections"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioButton
                android:id="@+id/LradioButtonVoter"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text=" VOTER"
                android:textFontWeight="700"
                android:textSize="23dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="276dp"
                android:layout_height="74dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/gowun_dodum"
                android:text="As an voter, you can take part in elections"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent" />
        </RadioGroup>

        <Button
            android:id="@+id/LAccountTypeContinueButton"
            android:layout_width="211dp"
            android:layout_height="64dp"
            android:background="@drawable/input_button"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.865" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="179dp"
            android:layout_height="109dp"
            android:src="@drawable/half_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.568"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.088" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>